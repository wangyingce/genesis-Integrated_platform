<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	
	<!-- 用户登录权限 -->
	<package name="login" extends="struts-default" namespace="/login">
		<!-- 用户登录校验 -->
		<action name="checkLogin" class="loginAction" method="checkLogin"></action>
		<!-- 加载首页 -->
		<action name="initIndex" class="loginAction" method="initIndex"></action>
		<!-- 加载用户信息 -->
		<action name="initUser" class="loginAction" method="initUser"></action>
		<!-- 更新用户信息 -->
		<action name="updateUser" class="loginAction" method="updateUser"></action>
		<!-- 用户退出系统 -->
		<action name="exitSys" class="loginAction" method="exitSys"></action>
		<!-- 修改更新密码 -->
		<action name="changePas" class="loginAction" method="changePas"></action>
		<!-- 修改更新密码 -->
		<action name="addUser" class="loginAction" method="addUser"></action>
		<!-- 修改更新密码 -->
		<action name="quitUser" class="loginAction" method="quitUser"></action>
	</package>
</struts>
