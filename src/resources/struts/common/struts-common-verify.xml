<struts>
	<!-- 验证码-->
	<package name="verify" extends="struts-default" namespace="/vf">
		<!-- 获取验短信证码-->
		<action name="rv" class="verifyAction" method="receiveVerify"/>
		<!-- 校验短信验证码-->
		<action name="cy" class="verifyAction" method="confirmVerify"/>
	</package>
</struts>
